@model web1.Models.BenhNhan

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaBenhNhan)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaBenhNhan)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TenBenhNhan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenBenhNhan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tuoi)
        </dt>

        <dd>
