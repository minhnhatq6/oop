@model IEnumerable<web1.Models.BenhNhan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Thông tin bệnh nhân</h2>
<div class="btn btn-warning"  >
    @Html.ActionLink("Thêm mới", "Create")
</div>

@using (Html.BeginForm())
{

    <p>
        Tên bệnh nhân: @Html.TextBox("SearchString")
        <button type="submit" class="btn btn-success">Tìm kiếm</button>
    </p>


   


}
<div class="table-responsive">
    <table class="table table-primary" border="1">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.TenBenhNhan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tuoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nam)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.TenBenhNhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tuoi)
                </td>
                <td>
                    @if (item.Nam == true)
                {
                    @:Nam
                }
                    else
                {
                    @:Nữ
                }
                </td>

                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaBenhNhan }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaBenhNhan }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaBenhNhan }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>