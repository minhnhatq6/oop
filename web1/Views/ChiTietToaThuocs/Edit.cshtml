@model web1.Models.ChiTietToaThuoc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sửa</title>
</head>
<body>
    <h2>
        Sửa
