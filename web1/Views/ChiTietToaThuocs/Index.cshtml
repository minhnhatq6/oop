@model IEnumerable<web1.Models.ChiTietToaThuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Thông tin chi tiết toa thuốc</h2>
<div class="btn btn-warning">
    @Html.ActionLink("Thêm mới", "Create")
</div>
<div class="table-responsive">
    <table class="table table-primary" border="1">
        <tr>
            <th>@Html.DisplayNameFor(model => model.STT)</th>
            <th>@Html.DisplayNameFor(model => model.ToaThuoc.MaBenhNhan)</th>
            <th>@Html.DisplayNameFor(model => model.Thuoc.TenThuoc)</th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.STT)</td>
                <td>@Html.DisplayFor(modelItem => item.ToaThuoc.MaBenhNhan)</td>
                <td>@Html.DisplayFor(modelItem => item.Thuoc.TenThuoc)</td>

                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn btn-success" }) |
                    @* <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal_@item.ID">Details</button>|*@
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }, new { @class = "btn btn-primary" }) |

                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>
        
