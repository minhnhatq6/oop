@model IEnumerable<web1.Models.ToaThuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center   ">Thông tin toa thuốc</h2>

<div class="btn btn-warning">
    @Html.ActionLink("Thêm mới", "Create")
</div>
<div class="table-responsive">

    <table class="table table-primary" border="1">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.BenhNhan.TenBenhNhan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BenhDuocChanDoan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKham)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.BenhNhan.TenBenhNhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BenhDuocChanDoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayKham)
                </td>

                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.STT }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.STT }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.STT }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
