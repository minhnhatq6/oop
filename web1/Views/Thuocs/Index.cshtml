@model IEnumerable<web1.Models.Thuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Thông tin thuốc</h2>

<div class="btn btn-warning">
    @Html.ActionLink("Thêm mới", "Create")
</div>
@using (Html.BeginForm())
{

    <p>
        Nước sản xuất: @Html.DropDownList("nuocsx", "All")
        Tên thuốc: @Html.TextBox("Search")
        <button type="submit" class="btn btn-success">Tìm kiếm</button>

    </p>




}

<div class="table-responsive">
    <table class="table table-primary" border="1">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.TenThuoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NuocSx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>

           

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.TenThuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NuocSx)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>

               

                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaThuoc }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaThuoc }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaThuoc }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    </div>